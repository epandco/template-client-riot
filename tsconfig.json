{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "downlevelIteration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "esnext",
      "scripthost",
      "es5"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.riot"
  ],
  "exclude": [
    "node_modules"
  ]
}